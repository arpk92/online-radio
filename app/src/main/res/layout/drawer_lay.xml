<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="@drawable/gradient_demo2"
                  android:layout_height="match_parent">



    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">


            <ImageView android:layout_width="100sp"
                       android:layout_margin="15sp"
                       android:src="@drawable/appicon1"
                       android:layout_height="100sp"/>


            <TextView android:layout_width="wrap_content"
                      android:textStyle="bold"
                      android:textAllCaps="true"
                      android:textColor="@color/white"
                      android:textSize="20sp"
                      android:gravity="center"
                      android:text="@string/menu_name"
                      android:layout_height="wrap_content"/>




        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="RtlSymmetry">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">


            <LinearLayout android:layout_width="match_parent"
                          android:padding="5sp"
                          android:gravity="center"
                          android:id="@+id/home_dr"
                          android:layout_marginBottom="5sp"
                          android:orientation="horizontal"
                          android:layout_height="50sp">
                <ImageView android:layout_width="50sp"
                           android:padding="13sp"
                           android:gravity="center"
                           android:tint="@color/white"
                           android:src="@drawable/ic_home"
                           android:layout_height="50sp"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginStart="10sp"
                          android:text="Home"
                          android:textColor="@color/white"
                          android:textStyle="bold"
                          android:gravity="center|start"
                          android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:padding="5sp"
                          android:id="@+id/fav_dr"
                          android:gravity="center"
                          android:layout_marginBottom="5sp"
                          android:orientation="horizontal"
                          android:layout_height="50sp">
                <ImageView android:layout_width="50sp"
                           android:tint="@color/white"
                           android:padding="12sp"
                           android:gravity="center"
                           android:src="@drawable/ic_favorite_fill"
                           android:layout_height="50sp"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginStart="10sp"
                          android:text="Favorite"
                          android:textColor="@color/white"

                          android:textStyle="bold"
                          android:gravity="center|start"
                          android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:padding="5sp"
                          android:gravity="center"
                          android:id="@+id/recent_dr"
                          android:layout_marginBottom="5sp"
                          android:orientation="horizontal"
                          android:layout_height="50sp">
                <ImageView android:layout_width="50sp"
                           android:padding="13sp"
                           android:textColor="@color/white"
                           android:tint="@color/white"
                           android:gravity="center"
                           android:src="@drawable/ic_music_player"
                           android:layout_height="50sp"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginStart="10sp"
                          android:text="Recently Played"
                          android:textStyle="bold"
                          android:textColor="@color/white"
                          android:gravity="center|start"
                          android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:padding="5sp"
                          android:id="@+id/record_dr"
                          android:gravity="center"
                          android:layout_marginBottom="5sp"
                          android:orientation="horizontal"
                          android:visibility="gone"
                          android:layout_height="50sp">
                <ImageView android:layout_width="50sp"
                           android:tint="@color/white"
                           android:padding="13sp"
                           android:gravity="center"
                           android:src="@drawable/ic_microphone"
                           android:layout_height="50sp"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginStart="10sp"
                          android:text="Recordings"
                          android:textStyle="bold"
                          android:textColor="@color/white"
                          android:gravity="center|start"
                          android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:padding="5sp"
                          android:id="@+id/privacy_policy"
                          android:gravity="center"
                          android:layout_marginBottom="5sp"
                          android:orientation="horizontal"
                          android:layout_height="50sp">
                <ImageView android:layout_width="50sp"
                           android:tint="@color/white"
                           android:padding="13sp"
                           android:gravity="center"
                           android:src="@drawable/ic_padlock"
                           android:layout_height="50sp"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginStart="10sp"
                          android:text="Privacy Policy"
                          android:textStyle="bold"
                          android:textColor="@color/white"
                          android:gravity="center|start"
                          android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:padding="5sp"
                          android:id="@+id/exit_dr"
                          android:gravity="center"
                          android:layout_marginBottom="5sp"
                          android:orientation="horizontal"
                          android:layout_height="50sp">
                <ImageView android:layout_width="50sp"
                           android:padding="13sp"
                           android:gravity="center"
                           android:tint="@color/white"
                           android:src="@drawable/ic_logout"
                           android:layout_height="50sp"/>

                <TextView android:layout_width="match_parent"
                          android:layout_marginStart="10sp"
                          android:text="Exit"
                          android:textColor="@color/white"

                          android:textStyle="bold"
                          android:gravity="center|start"
                          android:layout_height="match_parent"/>
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    </LinearLayout>

</LinearLayout>